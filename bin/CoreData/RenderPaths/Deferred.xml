<renderpath>
    <rendertarget name="albedo" sizedivisor="1 1" format="rgba" />
    <rendertarget name="normal" sizedivisor="1 1" format="rgba" />
    <rendertarget name="depth" sizedivisor="1 1" format="lineardepth" />

    <rendertarget name="depth64" sizedivisor="64 64" format="lineardepth" filter="false" />
    <rendertarget name="depth16" sizedivisor="16 16" format="lineardepth" filter="false" />
    <rendertarget name="depth4" sizedivisor="4 4" format="lineardepth" filter="false" />

    <command type="clear" color="fog" depth="1.0" stencil="255" />
    <command type="clear" color="12000 0 0 0" output="depth" />

    <command type="scenepass" pass="deferred" marktostencil="true" vertexlights="true" metadata="gbuffer">
        <output index="0" name="viewport" />
        <output index="1" name="albedo" />
        <output index="2" name="normal" />
        <output index="3" name="depth" />
    </command>

    <command type="quad" tag="premarch" vs="raymarch" ps="raymarch" psdefines="PREMARCH" output="depth64">
      <parameter name="RAY_STEPS" value="256" />
    </command>

    <command type="quad" tag="premarch" vs="raymarch" ps="raymarch" psdefines="PREMARCH" output="depth16">
      <texture unit="specular" name="depth64" />
      <parameter name="RAY_STEPS" value="60" />
    </command>

    <command type="quad" tag="premarch" vs="raymarch" ps="raymarch" psdefines="PREMARCH" output="depth4">
      <texture unit="specular" name="depth16" />
      <parameter name="RAY_STEPS" value="260" />
    </command>

    <command type="quad" tag="raymarch" vs="raymarch" ps="raymarch" psdefines="DEFERRED">
      <texture unit="depth" name="depth" />
      <texture unit="specular" name="depth4" />
      <output index="0" name="viewport" />
      <output index="1" name="albedo" />
      <output index="2" name="normal" />
      <output index="3" name="depth" />
      <parameter name="RAY_STEPS" value="96" />
    </command>

    <command type="lightvolumes" vs="DeferredLight" ps="DeferredLight" >
        <texture unit="albedo" name="albedo" />
        <texture unit="normal" name="normal" />
        <texture unit="depth" name="depth" />
    </command>
    <command type="scenepass" pass="postopaque" />
    <command type="scenepass" pass="refract">
        <texture unit="environment" name="viewport" />
    </command>
    <command type="scenepass" pass="alpha" vertexlights="true" sort="backtofront" metadata="alpha" />
    <command type="scenepass" pass="postalpha" sort="backtofront" />
</renderpath>
